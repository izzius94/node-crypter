{
  "compilerOptions": {
    "module": "commonJs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "lib": [
      "es2015",
      "ES2021.String"
    ],
    "target": "ES2015",
    "declaration": true,
    "esModuleInterop": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/",
    "./dist/**/*"
  ]
}
